<h2>Edit Historical Figure</h2>

<form method="POST" action="/figures/<%=@figure.id%>">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <p>Enter Name: <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"/></p>
  <p>Select Titles:<br>

  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id.to_s%>" <%="checked" if @figure.title_ids.include?(title.id)%>><%=title.name%></input>
  <% end %></p>

  <p>And/Or enter a new Title:
    <input type="text" name="title[name]" id="new_title"/>
  </p>

  <p>Select Landmarks:<br>

  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id.to_s%>" <%="checked" if @figure.landmark_ids.include?(landmark.id)%>><%=landmark.name%></input>
  <% end %></p>

  <p>And/Or enter a new Landmark:<br>
    Name: <input type="text" name="landmark[name]" id="new_landmark"/>
    Year: <input type="text" name="landmark[year]" id="new_landmark_year"/>
  </p>

  <input type="submit" value="Edit Figure"/><br><br>
</form>





<a class="button" href="/figures">Figures</a>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
